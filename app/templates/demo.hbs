<div class="mdl-layout
            mdl-js-layout
            mdl-layout--fixed-header
            mdl-layout--fixed-drawer">

  <header class="mdl-layout__header">
    <div class="mdl-layout__header-row">
      <span class="mdl-layout-title">
        Demo
        <span class="addon-name">ember-cli-jquery-coverflow</span>
      </span>

      <div class="mdl-layout-spacer"></div>

      <a href="https://www.npmjs.com/package/ember-cli-jquery-coverflow" target="_blank" class="header-link npm">
        <img src="assets/images/npm.svg" alt="GitHub logo">
      </a>

      <a href="https://github.com/jessepinho/ember-cli-jquery-coverflow" target="_blank" class="header-link github">
        <img src="assets/images/github.svg" alt="GitHub logo">
      </a>
    </div>
  </header>

  <div class="mdl-layout__drawer demo-config">
    <section class="demo-config-form">
      <p class="demo-config-form-docs-link">(<a href="http://vanderlee.github.io/coverflow/" target="_blank">docs</a>)</p>
      <h1>Config options</h1>

      <div class="mdl-tooltip" for="enable-click-label">
        Coming to this demo soon!
      </div>
      <label class="mdl-switch mdl-js-switch mdl-js-ripple-effect" for="enable-click" id="enable-click-label">
        {{input type="checkbox"
                id="enable-click"
                class="mdl-switch__input"
                checked=enableClick
                disabled=true}}
        <span class="mdl-switch__label">enableClick</span>
      </label>

      <label class="mdl-switch mdl-js-switch mdl-js-ripple-effect" for="enable-keyboard">
        {{input type="checkbox"
                id="enable-keyboard"
                class="mdl-switch__input"
                checked=enableKeyboard}}
        <span class="mdl-switch__label">enableKeyboard</span>
      </label>

      <div class="mdl-tooltip" for="enable-wheel-label">
        Coming to this demo soon!
      </div>
      <label class="mdl-switch mdl-js-switch mdl-js-ripple-effect" for="enable-wheel" id="enable-wheel-label">
        {{input type="checkbox"
                id="enable-wheel"
                class="mdl-switch__input"
                checked=enableWheel
                disabled=true}}
        <span class="mdl-switch__label">enableWheel</span>
      </label>

      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        {{input type="text"
                value=density
                classNames="mdl-textfield__input"}}
        <label class="mdl-textfield__label">density</label>
      </div>

      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        {{input type="text"
                value=innerAngle
                classNames="mdl-textfield__input"}}
        <label class="mdl-textfield__label">innerAngle</label>
      </div>

      <div class="mdl-tooltip" for="inner-scale-label">
        Coming to this demo soon!
      </div>
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label" id="inner-scale-label">
        {{input type="text"
                value=innerScale
                classNames="mdl-textfield__input"
                disabled=true}}
        <label class="mdl-textfield__label">innerScale</label>
      </div>

      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        {{input type="text"
                value=outerAngle
                classNames="mdl-textfield__input"}}
        <label class="mdl-textfield__label">outerAngle</label>
      </div>

      <div class="mdl-tooltip" for="outer-scale-label">
        Coming to this demo soon!
      </div>
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label" id="outer-scale-label">
        {{input type="text"
                value=outerScale
                classNames="mdl-textfield__input"
                disabled=true}}
        <label class="mdl-textfield__label">outerScale</label>
      </div>

      <div class="mdl-tooltip" for="index-label">
        Coming to this demo soon!
      </div>
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label" id="index-label">
        {{input type="text"
                value=index
                classNames="mdl-textfield__input"
                disabled=true}}
        <label class="mdl-textfield__label">index</label>
      </div>
    </section>

    <section class="demo-code-snippet">
      <div class="mdl-tooltip" for="copy-code-button">
        Copy code
      </div>
      {{#zero-clipboard text="hello, world"
                        tagName="button"
                        afterCopy=(action "afterCopy")
                        cbTarget="demo-code-snippet-clipboard-target"
                        class="mdl-button
                               mdl-js-button
                               mdl-button--fab
                               mdl-js-ripple-effect
                               mdl-shadow--4dp"
                        id="copy-code-button"}}
        <i class="material-icons copy">content_copy</i>
        <i class="material-icons check">check</i>
      {{/zero-clipboard}}

      <h1>Copy-pasta</h1>

      <code>
        <pre id="demo-code-snippet-clipboard-target">{{partial "partials/demo-code-snippet"}}</pre>
      </code>
    </section>
  </div>

  <main class="mdl-layout__content">
    {{#jquery-coverflow density=density
                        enableClick=enableClick
                        enableKeyboard=enableKeyboard
                        enableWheel=enableWheel
                        index=index
                        innerAngle=innerAngle
                        innerScale=innerScale
                        observeForRefresh=observeForRefresh
                        outerAngle=outerAngle
                        outerScale=outerScale}}
      {{#each covers as |cover|}}
        {{#jquery-coverflow-cover classNames="mdl-shadow--4dp"}}
          <h2>
            <span>{{cover}}</span>
          </h2>
        {{/jquery-coverflow-cover}}
      {{/each}}
    {{/jquery-coverflow}}

    <footer>
      {{input type="range"
              class="mdl-slider mdl-js-slider"
              min="0"
              max="100"
              value=numberOfCovers}}
              <label id="number-of-covers-label">Number of covers: {{numberOfCovers}}</label>
    </footer>
  </main>
</div>
